@using Model.EF
@model User
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Login/_LayoutLogin.cshtml";
}

@section styles
{
    <link rel="stylesheet" href="@Url.Content("~/plugins/iCheck/square/blue.css")">
}
<style>
    #feedback {
        position:relative;

    }
    #gly {
        position:absolute;
        right:5px;
        top:8px;
    }
</style>
@section scripts
{
    <script>
        $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
        });
    </script>
}

<p class="login-box-msg">Sign in to start your session</p>
@using (Html.BeginForm("dangnhap", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group has-feedback" id="feedback">
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Email" })
        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        <span class="glyphicon glyphicon-envelope form-control-feedback" id="gly"></span>
    </div>
    <div class="form-group has-feedback" id="feedback">
        @Html.PasswordFor(m => m.PasswordHash, new { @class = "form-control", @placeholder = "Password" })
        @Html.ValidationMessageFor(m => m.PasswordHash, "", new { @class = "text-danger" })
        <span class="glyphicon glyphicon-lock form-control-feedback" id="gly"></span>
    </div>
    <div class="row">
        <div class="col-xs-8">
            <div class="checkbox icheck">
                <label>
                    <input type="checkbox"> Remember Me
                    @*@Html.CheckBoxFor(m => m.RememberMe) Remember Me*@
                </label>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
        </div>
        <!-- /.col -->
    </div>
}
